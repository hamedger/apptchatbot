# Cloud Deployment Environment Configuration
# Copy this to .env and fill in your values

# Application Configuration
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# Twilio Configuration (Required)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=whatsapp:+14155238886

# Admin Configuration
ADMIN_WHATSAPP_NUMBER=whatsapp:+12489075504

# Frontend Configuration
FRONTEND_ORIGIN=https://your-app-name.onrender.com

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting (Cloud-optimized)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
SLOW_DOWN_DELAY_MS=500

# Database Configuration (Cloud-optimized)
DATABASE_TYPE=sqlite
DATABASE_PATH=/opt/render/project/src/data/appointments.db

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/opt/render/project/src/logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=7d

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true

# Render-specific settings
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
RENDER_INSTANCE_TYPE=starter
